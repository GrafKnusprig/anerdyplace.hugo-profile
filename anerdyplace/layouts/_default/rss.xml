{{- printf "<?xml version= \"1.0\" encoding= \"utf-8\"?>" | safeHTML }}
<rss version="2.0"
  xmlns:media="http://search.yahoo.com/mrss/"
  xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ with .Site.Params.rssTitle }}{{ . }}{{ else }}{{ .Site.Title }}{{ end }}</title>
    <link>{{
    .Site.BaseURL }}</link>
    <description>{{ .Site.Params.description | html }}</description>
    <language>{{
    .Site.LanguageCode }}</language>
    <atom:link href="{{ "/ blog/ index.xml" | absURL }}" rel="self" type="application/rss+xml" />
    {{ range first 15 (where .Site.RegularPages "Section" "blog") }} <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <guid>{{ .Permalink }}</guid>
      <pubDate>{{
    .Date.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
<description>{{ with
    .Resources.GetMatch .Params.thumbnail }} <p>
          <img src="{{ .Permalink }}" alt="Post thumbnail" />
        </p> {{ end }}{{ .Summary |
    htmlUnescape | html }}</description> {{ with .Resources.GetMatch .Params.thumbnail }} <media:thumbnail
        url="{{ .Permalink }}" /> {{ end }} </item> {{ end }} </channel>
</rss>